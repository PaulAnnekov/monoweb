{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "member-access": false,
    "max-classes-per-file": false,
    "no-console": false,
    "trailing-comma": {
        "options": {
            "esSpecCompliant": true,
            "multiline": {
              "objects": "always",
              "arrays": "always",
              "functions": "never",
              "typeLiterals": "ignore"
            },
            "singleline": "never"
        }
    }
  }
}
